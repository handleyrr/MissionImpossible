@model  MissionImpossible.Models.Form
@{
    ViewBag.Title = "_EditForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>_EditForm</h2>

<div class="form-group">
    @Html.LabelFor(m => m.Form_name)
    @Html.TextBoxFor(m => m.Form_name, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Description)
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Type)
    @Html.EnumDropDownListFor(m => m.Type, new { @class = "form-control" })
</div>

@Html.HiddenFor(m => m.Id)
<input type="submit" class="btn btn-primary" value="Save" />
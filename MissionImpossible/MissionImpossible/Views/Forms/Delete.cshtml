@model MissionImpossible.Models.Form

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you would like to delete this video?
</p>
<ul>
    <li>Title: @Model.Form_name</li>
    <li>Description: @Model.Description</li>
</ul>

@using (Html.BeginForm("DoDelete", "Forms", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes!" />
    @Html.ActionLink("No", "Index")
}